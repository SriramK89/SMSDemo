<h1>Listing sms</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Message</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sms.each do |sm| %>
  <tr>
    <td><%= sm.number %></td>
    <td><%= sm.message %></td>
    <td><%= link_to 'Show', sm %></td>
    <td><%= link_to 'Destroy', sm, method: :delete, data: { confirm: 'Are you sure to destroy this sms history?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Send SMS', new_sm_path %>
